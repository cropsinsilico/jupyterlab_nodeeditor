{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "remove",
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "rootDir": "src",
    "typeRoots": [
      "./node_modules/@types/",
      "./src/localtypes"
    ],
    "strict": true,
    "strictNullChecks": false,
    "target": "ES2018",
    "types": [
      "node",
      "rete-react-render-plugin",
      "rete-vue-render-plugin",
      "rete-context-menu-plugin",
      "resize-observer-browser",
      "rete-auto-arrange-plugin"
    ],
    "skipLibCheck": true
  },
  "include": ["src/*"],
  "exclude": [
    "./src/localtypes"
  ]
}
